<Window x:Class="Landscape.Pages.AddPlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landscape.Pages"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Добавление растения" Height="450" Width="400"
        Background="#f3f3f3">

    <Grid>
        <TextBlock Text="Добавление нового растения" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#388E3C"/>

        <TextBlock Text="Название растения:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0"/>
        <TextBox Name="NameTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,10,0" Width="360" Height="35" FontFamily="Segoe UI" FontSize="14" Padding="5" BorderBrush="#4CAF50" BorderThickness="1" Background="White"/>

        <TextBlock Text="Цена за единицу:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0"/>
        <TextBox Name="PricePerUnitTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,150,10,0" Width="360" Height="35" FontFamily="Segoe UI" FontSize="14" Padding="5" BorderBrush="#4CAF50" BorderThickness="1" Background="White"/>

        <TextBlock Text="Условия роста:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,200,0,0"/>
        <TextBox Name="GrowthConditionsTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,230,10,0" Width="360" Height="35" FontFamily="Segoe UI" FontSize="14" Padding="5" BorderBrush="#4CAF50" BorderThickness="1" Background="White"/>

        <TextBlock Text="Тип растения:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,280,0,0"/>
        <ComboBox Name="PlantTypeComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,310,10,0" Width="360" Height="35" FontFamily="Segoe UI" FontSize="14" Padding="5" BorderBrush="#4CAF50" BorderThickness="1" Background="White"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,360,0,0">
            <Button Name="AddButton" Content="Добавить" Width="120" Height="40" Margin="10" Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" BorderThickness="1" FontFamily="Segoe UI" FontSize="14" Padding="10,5" Cursor="Hand" Click="AddButton_Click"/>
            <Button Name="CancelButton" Content="Отмена" Width="120" Height="40" Margin="10" Background="#FF5722" Foreground="White" BorderBrush="#D32F2F" BorderThickness="1" FontFamily="Segoe UI" FontSize="14" Padding="10,5" Cursor="Hand" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
