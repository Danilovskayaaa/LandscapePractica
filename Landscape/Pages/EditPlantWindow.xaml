<Window x:Class="Landscape.Pages.EditPlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landscape.Pages"
        mc:Ignorable="d"
        Title="EditPlantWindow" Height="450" Width="500">

    <Grid Background="#F9F9F9">
        <TextBlock Text="Редактирование растения" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,30"/>

        <TextBlock Text="Название растения:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0"/>
        <TextBox Name="NameTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,90,20,0" Width="460" Height="35" FontSize="14" Padding="10" Background="#FFFFFF" BorderBrush="#B0BEC5" BorderThickness="1"/>

        <TextBlock Text="Цена за единицу:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,140,0,0"/>
        <TextBox Name="PricePerUnitTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,170,20,0" Width="460" Height="35" FontSize="14" Padding="10" Background="#FFFFFF" BorderBrush="#B0BEC5" BorderThickness="1"/>

        <TextBlock Text="Условия роста:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,220,0,0"/>
        <TextBox Name="GrowthConditionsTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,250,20,0" Width="460" Height="35" FontSize="14" Padding="10" Background="#FFFFFF" BorderBrush="#B0BEC5" BorderThickness="1"/>

        <TextBlock Text="Тип растения:" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,300,0,0"/>
        <ComboBox Name="PlantTypeComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,330,20,0" Width="460" Height="35" FontSize="14" Background="#FFFFFF" BorderBrush="#B0BEC5" BorderThickness="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,380,0,0">
            <Button Name="SaveButton" Content="Сохранить" Width="120" Height="40" Margin="10" FontSize="14" Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" BorderThickness="1" Click="SaveButton_Click"/>
            <Button Name="DeleteButton" Content="Удалить" Width="120" Height="40" Margin="10" FontSize="14" Background="#F44336" Foreground="White" BorderBrush="#D32F2F" BorderThickness="1" Click="DeleteButton_Click"/>
            <Button Name="CancelButton" Content="Отмена" Width="120" Height="40" Margin="10" FontSize="14" Background="#9E9E9E" Foreground="White" BorderBrush="#616161" BorderThickness="1" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
