<Page x:Class="Landscape.Pages.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Landscape.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизацмя">

    <Grid Background="#F0F0F0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333" Grid.Row="0"/>

        <TextBlock Text="Логин 🗝️" FontSize="14" Margin="0,10,0,5" Foreground="#444" HorizontalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="txtbLogin" Height="35" Width="250" Margin="0,0,0,15" Padding="8" FontSize="14" BorderBrush="#4CAF50" BorderThickness="1" Background="#F9F9F9" HorizontalAlignment="Center" Grid.Row="2"/>

        <TextBlock Text="Пароль 🔒" FontSize="14" Margin="0,10,0,5" Foreground="#444" HorizontalAlignment="Center" Grid.Row="3"/>
        <PasswordBox x:Name="pswbPassword" Height="35" Width="250" Margin="0,0,0,15" Padding="8" FontSize="14" BorderBrush="#4CAF50" BorderThickness="1" Background="#F9F9F9" HorizontalAlignment="Center" Grid.Row="4"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="5">
            <Button x:Name="btnEnter" Content="Войти ✅" Width="150" Height="40" Background="#4CAF50" Foreground="White" FontSize="16" BorderBrush="#388E3C" BorderThickness="1" Margin="5" Click="btnEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>
